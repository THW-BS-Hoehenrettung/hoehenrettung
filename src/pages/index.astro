---
import Base from "@/layouts/Base.astro";
import LandingPageMap from "../components/LandingPageMap.astro";
import BannerCarousel from "../components/carousel";
import Contact from "../components/Contact.astro";
import History from "../components/history.astro";
import UseCases from "../components/UseCases.astro";
---

<Base>
<!-- Banner -->
<section class="section pt-0">
    <div class="container">
        <div class="row justify-center">
            <div class="col-12">
                <BannerCarousel client:load />
            </div>
        </div>
    </div>
</section>

<History></History>

<UseCases></UseCases>

<Contact></Contact>

<!-- Map -->
<section class="section-sm bg-gradient">
    <div class="container">
        <LandingPageMap/>
    </div>
</section>

</Base>
