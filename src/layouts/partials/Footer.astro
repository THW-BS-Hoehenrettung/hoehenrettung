---
import Logo from "@/components/Logo.astro";
import DynamicIcon from "../helpers/DynamicIcon";
---

<footer class="bg-theme-light dark:bg-darkmode-theme-light">
    <div class="container">
        <div class="row items-center py-10">
            <div class="mb-8 text-center lg:col-3 lg:mb-0 lg:text-left">
                <Logo/>
                <span class="font-extrabold">THW-Höhenrettung Braunschweig</span>
            </div>
            <div class="mb-8 text-center lg:col-6 lg:mb-0">
                <ul>
                    <li class="m-3 inline-block">
                        <a href=/impressum>Impressum</a>
                        <p>Bilder und Texte © by THW-Höhenrettung Braunschweig</p>
                    </li>
                </ul>
            </div>
            <div class="mb-8 text-center lg:col-3 lg:mb-0 lg:mt-0 lg:text-right">
                <ul class="social-icons">
                    <li class="m-3 inline-block">
                        <a
                                aria-label="github"
                                href="https://github.com/THW-BS-Hoehenrettung/hoehenrettung"
                                target="_blank"
                                rel="noopener noreferrer nofollow"
                        >
                            <span class="sr-only">"github"</span>
                            <DynamicIcon class="inline-block" icon="FaGithub"/>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</footer>
